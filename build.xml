<?xml version="1.0" encoding="UTF-8"?>
<project name="Hola_Ant" default="run">

	<target name="run" depends="limpiar, compilar, empaquetar">
	</target>
	
	<target name="limpiar" >
		<delete dir="build"/>
	</target>

	<target name="compilar" depends="limpiar">
		<mkdir dir="build/classes"/>
		<javac srcdir="src" destdir="build/classes"/>
	</target>

	<target name="empaquetar" depends="compilar">
		<mkdir dir="build/jar"/>
		<jar destfile="build/jar/HolaMundo.jar" basedir="build/classes">
		<manifest>
		<attribute name="Main-Class" value="com.holamundo.HolaMundo"/>
		</manifest>
		</jar>
	</target>

</project>